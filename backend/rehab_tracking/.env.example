# Rehab Exercise Tracking - Environment Variables
# Copy this file to .env and update the values for your local development

# Database Configuration
DATABASE_URL=ecto://postgres:postgres@localhost:5432/rehab_tracking_dev
EVENTSTORE_URL=postgres://postgres:postgres@localhost:5432/rehab_eventstore_dev

# Phoenix Configuration  
SECRET_KEY_BASE=supersecretkey123456789012345678901234567890123456789012345678901234567890
PHX_HOST=localhost
PORT=4000
PHX_SERVER=true

# Environment
MIX_ENV=dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration (for Broadway)
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Logging
LOG_LEVEL=info

# Security & Compliance
ENCRYPTION_KEY=your-32-byte-encryption-key-here
AUDIT_ENABLED=true

